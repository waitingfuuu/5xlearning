<div class="flex flex-col justify-center items-center">
	<h1 class="mb-8 text-5xl font-extrabold font-mono"><%= t('user.signup').camelize(:upper) %></h1>

	<%= form_for @user, :html=> {:id => 'user_form'} do |f| %>
		<% if @user.errors.any? %>
			<div class="rounded-lg bg-red-200 text-center mx-auto my-5 p-2 w-128 ">
				<% @user.errors.full_messages.each do |msg| %>
					<p style='color:red'><%= msg %></p>
				<% end %>
			</div>
		<% end %>

    <table class="border border-4 border-slate-500">
      <tr>
        <td class="pl-20 pt-10 pb-2"><%= t('user.identity') %></td>
        <td class="p-20 pt-10 pb-2"><%= f.select(:role, [[t('user.role'), 'admin'], [t('user.general'), 'general']]) %></td>
      </tr>
      <tr>
        <td class="pl-20 pt-10 pb-2"><%= t('user.name') %></td>
        <td class="p-20 pt-10 pb-2"><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td class="pl-20 pt-10 pb-2"><%= t('user.password') %></td>
        <td class="p-20 pt-10 pb-2"><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td colspan="2" class="pb-10">
          <div class="w-48 mx-auto mt-5">
            <%= f.submit t('user.signup'), class: "w-48 border-2 px-5 py-2 rounded-lg border-rose-400 border-b-4 font-black translate-y-2 border-l-4 bg-rose-400 text-white text-center hover:bg-mybg hover:text-rose-400" %>
          </div>
        </td>
      </tr>
    </table>
	<% end %>

  <div class="mt-5 px-5 py-2">
    <%= t('user.have_account') %>
    <%= link_to t('user.login_now'), login_path, class: "underline decoration-sky-500" %>
	</div>
	<%= link_to t('index.return'), root_path, class: "mt-5 border-2 px-5 py-2 rounded-lg border-black border-b-4 font-black translate-y-2 border-l-4 bg-black text-white hover:bg-mybg hover:text-black" %>
</div>